{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}
{% block body %}
<div class="container mt-4">
    <h1>Vos Achats</h1>

    {% if items is empty %}
    <p><b>Votre panier est vide !!</b></p>
    {% else %}

    <a href="{{ path('panier_clear') }}" onclick="return confirm('Etes-vous sure de vouloir vider tout le panier ?');" class="btn btn-warning mb-2"><i class="fas fa-trash-alt me-1"></i> Supprimer vos articles</a>
     <a href="{{ path('page_gallerie', {id: 1})}}" class="btn btn-danger mb-2"> Continuez vos cours</a>    
     
{# {% if items is not empty and (categorie.id == 1 or categorie.id == 2) %}
  {% if items == 1 %}
    <a href="{{ path('page_gallerie', {id: 1}) }}" class="btn btn-danger mb-2">Continue shopping</a>
  {% elseif items == 2 %}
    <a href="{{ path('page_gallerie', {id: 2}) }}" class="btn btn-danger mb-2">Continue shopping</a>
  {% endif %}
{% endif %} #}








  

    {# <table class="table table-dark table-striped"> #}
    <table class="table table-light table-striped custom-table">

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Model</th>
                {# <th scope="col">Catégorie</th> #}
                <th scope="col">Prix (€)</th>
                <th scope="col">Quantité</th>
                <th scope="col">Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr>
                <th scope="row">{{ item.velos.id }}</th>
                <td>{{ item.velos.model }}</td>
                {# <td></td> #}
                <td>{{ item.velos.prix }} €</td>
                <td> item.quantity </td>
                <td> item.velos.prix * item.velos.quantite €</td>
                <td>
                    <a class="btn btn-danger flex-shrink-0" onclick="return confirm('Suppimer cet élément du panier ?');" href="{{ path('panier_delete', {id: item.velos.id}) }}">
                        <i class="fas fa-trash-alt me-1"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">TOTAL</td>
                <td> totalQuantity </td>
                <td> total  €</td>
                <td>
                    <form action="/checkout" method="POST">
                        <button type="submit" class="btn btn-primary">PAYER  total  €</button>
                    </form>
                </td>
            </tr>
        </tfoot>
    </table>

    {% endif %}
</div>
{% endblock %}
